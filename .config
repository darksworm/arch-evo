#!/usr/bin/env bash
# arch-evo environment configuration
# Sourced by all install scripts

REPO_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CONF_DIR="${REPO_DIR}/conf"
BIN_DIR="${REPO_DIR}/bin"
LIB_DIR="${REPO_DIR}/lib"
APPS_DIR="${REPO_DIR}/apps"
COMPLETED_DIR="${REPO_DIR}/.completed"

# Defaults (overridden by TUI or env vars)
TIMEZONE="${TIMEZONE:-Europe/Riga}"
LOCALE_MAIN="${LOCALE_MAIN:-en_US.UTF-8}"
LOCALE_EXTRA="${LOCALE_EXTRA:-lv_LV.UTF-8}"
KEYMAP="${KEYMAP:-lv}"
HOSTNAME="${SET_HOSTNAME:-archbox}"
USERNAME="${USERNAME:-ilmars}"

# XDG
XDG_CONFIG_HOME="${HOME}/.config"
XDG_DATA_HOME="${HOME}/.local/share"
XDG_CACHE_HOME="${HOME}/.cache"
XDG_STATE_HOME="${HOME}/.local/state"

# Source libraries
source "${LIB_DIR}/detect.sh"
source "${LIB_DIR}/utils.sh"
source "${LIB_DIR}/dialog.sh"
